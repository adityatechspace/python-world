#while loop
i = 1

while i <= 5:
    print(i)
    i += 1

#for loop with range 
for i in range(1, 6):
    print(i)


# nested loop
# for every ONE round of the outer loop, the inner loop runs COMPLETELY from start to end.
for i in range(1,4):
    for j in range(1,3):
        print(i,j)

# Practice 1: Print Even Numbers from 1 to 20
i=1
while i<=20:
    if i%2==0:
        print(i)
    i+=1

# Practice 2: Print Table of a number taken as input from user
num = int(input("Enter a number to print its table: "))
for i in range(1,11):
    print(f"{num} x {i} = {num*i}")
